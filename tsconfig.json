{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@constants": ["src/constants"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@layouts/*": ["src/layouts/*"],
      "@mock/*": ["src/mock/*"],
      "@scripts/*": ["src/scripts/*"],
      "@sections/*": ["src/sections/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["scrap"]
}
